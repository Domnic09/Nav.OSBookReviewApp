@using NavOS.Basecode.Services.ServiceModels
@model List<AdminViewModel>

@{
    ViewData["Title"] = "Admin List";
    string[] headers = ViewBag.headers as string[];
}

@section styles {
    <link rel="stylesheet" type="text/css" href="~/css/list.css">
    <style>
        .btn-slide {
            position: relative;
            display: inline-block;
            overflow: hidden;
        }

        .trigger {
            padding: 10px 20px;
            background-color: transparent;
            color: #FFC119;
            border: 2px solid #f39c12;
            cursor: pointer;
            transition: color 0.5s, background-color 0.5s;
            position: relative;
            z-index: 2;
            display: inline-block;
            text-decoration: none;
        }

        .slide {
            position: absolute;
            top: 0;
            left: -100%;
            width: 100%;
            height: 100%;
            background-color: #f39c12;
            transition: left 0.5s ease;
            z-index: 1;
        }

        .btn-slide:hover .slide {
            left: 0;
        }

        .btn-slide:hover .trigger {
            color: #000;
            background-color: #FFC119;
        }
    </style>
}

<div class="row mb-5">
    <div class="col-12 col-md-12 px-2 justify-content-between">
        <div class="btn-slide float-end mt-2">
            <a class="trigger fw-semibold" asp-action="Add" asp-controller="Admin">+ Add Admin</a>
            <div class="slide"></div>
        </div>
    </div>
</div>
<form asp-controller="Admin" asp-action="List" method="get" class="form-inline my-2 my-lg-0" style="margin-top: 40px">
    <div class="input-group">
        <input class="form-control mr-sm-2" name="searchQuery" id="searchQuery" type="search" placeholder="Search Admin" style="border-radius: 5px;">&nbsp;
        <div class="input-group-append">
            <button class="btn my-2 my-sm-0" type="submit" style="background-color: #FFC119;color: black;">Search</button>
        </div>
    </div>
</form>

@if (Model.Any())
{
    <div class="table-responsive">
        <table class="table table-striped table-dark text-center" style="margin-top: 20px;">
            <thead class="rounded">
                <tr>
                    @foreach(var header in headers)
                    {
                        <th style="background-color: #FFC119;color: black;" scope="col">@header</th>
                    }
                </tr>
            </thead>
            <tbody>
                @foreach (var admin in Model)
                {
                    <tr>
                        <td class="align-middle">
                            @{ string AdminImg = admin.ImageUrl; }
                            <img src="@AdminImg" class="rounded-circle" onerror="errorImg(this)" alt="@admin.AdminName" width="80" height="80" style="object-fit: cover">
                        </td>
                        <td class="align-middle">@admin.AdminName</td>
                        <td class="align-middle">@admin.AdminEmail</td>
                        <td class="align-middle">@admin.Role</td>
                        <td class="align-middle">
                            <div class="btn-group" role="group">
                                <form asp-action="Edit" method="get">
                                    <input type="hidden" name="AdminId" value="@admin.AdminId">
                                    <button type="submit" class="btn btn-warning" title="Edit Admin"><i class="fas fa-edit"></i></button>
                                </form>
                                &nbsp;
                                @{
                                    string AdminName = HttpContextAccessor.HttpContext.Session.GetString("AdminName");
                                }
                                <button class="btn btn-outline-warning rounded" onclick="openModalSet('@admin.AdminId', '@((admin.AdminName == AdminName) ? "your account" : admin.AdminName)')" title="Delete Admin"><i class="fas fa-trash"></i></button>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <span class="text-white w3-display-middle">No Admin found </span>
}

@* Pagination *@
<nav aria-label="Page navigation example">
    <ul class="pagination justify-content-end">
        @if (ViewBag.CurrentPage > 1)
        {
            <li class="page-item">
                <a class="page-link" href="?page=@(ViewBag.CurrentPage - 1)" style="background-color: #FFC119;color: black;" aria-label="Previous">
                    <span aria-hidden="true">&laquo;</span>
                </a>
            </li>
        }
        @for (int i = ViewBag.CurrentPage - 2; i <= ViewBag.CurrentPage + 2; i++)
        {
            if (i >= 1 && i <= ViewBag.TotalPages)
            {
                <li class="page-item @(i == ViewBag.CurrentPage ? "active" : "")">
                    <a class="page-link" style="background-color: #FFC119;color: black;"
                       asp-controller="Admin" asp-action="List" asp-route-page="@i">@i</a>
                </li>
            }
        }
        @if (ViewBag.CurrentPage < ViewBag.TotalPages)
        {
            <li class="page-item">
                <a class="page-link" href="?page=@(ViewBag.CurrentPage + 1)" style="background-color: #FFC119;color: black;" aria-label="Next">
                    <span aria-hidden="true">&raquo;</span>
                </a>
            </li>
        }
    </ul>
</nav>

@* Modal Area *@
<div class="w3-modal" id="deleteModal">
    <div class="w3-modal-content w3-animate-top w3-round-xlarge" style="background-color: #212529;width: 40%;">
        <div class="w3-container w3-padding-large">
            <p>
                <div class="text-center">
                    <h3 class="w3-center">Are you sure you want to delete</h3>
                    <h3 class="w3-center" id="adminName"></h3>
                </div>
            </p>
            <div class="row text-center">
                <div id="AdminId" style="display: none"></div>
                <div class="col-md-6">
                    <button class="btn btn-outline-warning" style="width: 200px" onclick="deleteAdmin()"><h3>YES</h3></button>
                </div>
                <div class="col-md-6">
                    <button class="btn btn-warning" style="width: 200px" onclick="modal_control('deleteModal','none')"><h3>NO</h3></button>
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts {
    <script>
        // Check for error message and display Toastr notification
        var errorMessage = '@TempData["ErrorMessage"]';
        var successMessage = '@TempData["SuccessMessage"]';
        
        if (errorMessage) {
            toastr.error(errorMessage);
        }

        if (successMessage) {
            toastr.success(successMessage);
        }

        function errorImg(img) {
            img.src = "@Url.Content("~/img/admin_profile.svg")";
        }

    </script>
    <script src="~/js/adminModal.js"></script>
    <script src="~/js/getQueryParam.js"></script>
}
