@using NavOS.Basecode.Services.ServiceModels
@model AdminViewModel

@{
	ViewData["Title"] = "Add Admin";
}

<div class="row" style="margin-top:30px">
	<div class="col-md-6"><h3 style="font-weight: bold; color: #FFC119">EDIT ADMIN</h3></div>
	<div class="col-md-6" style="text-align: right"><h3><a asp-controller="Admin" asp-action="List" style="text-decoration: none; font-weight: bold;color: #FFC119">BACK</a></h3></div>
</div>

<style>
	.btn:hover {
		color: #212529;
	}
</style>

<form asp-action="Edit" style="margin-top:30px">
	<input type="hidden" class="form-control" asp-for="AdminId" />
	<div class="row">
		<div class="col-md-6">
			<div class="form-outline mb-4">
				<label class="form-label" for="AdminName">Admin Name</label>
				<input type="text" class="form-control" asp-for="AdminName" />
				<span asp-validation-for="AdminName" class="text-danger"></span>
			</div>
			<div class="form-outline mb-4">
				<label class="form-label" for="ContactNo">Contact Number</label>
				<input type="number" class="form-control" asp-for="ContactNo" />
				<span asp-validation-for="ContactNo" class="text-danger"></span>
			</div>
			<div class="form-outline mb-4">
				<label class="form-label" for="Dob">Date Of Birth</label>
				<input type="date" class="form-control" asp-for="Dob" />
				<span asp-validation-for="Dob" class="text-danger"></span>
			</div>
		</div>
		<div class="col-md-6">
			<div class="form-outline mb-4">
				<label class="form-label" for="AdminEmail">Admin Email</label>
				<input type="text" class="form-control" asp-for="AdminEmail" />
				<span asp-validation-for="AdminEmail" class="text-danger"></span>
			</div>
			<div class="form-outline mb-4">
				<label class="form-label" for="Role">Role</label>
				<select class="form-control" asp-for="Role" >
					<option value="Admin">Admin</option>
					<option value="Master Admin">Master Admin</option>
				</select>
				<span asp-validation-for="Role" class="text-danger"></span>
			</div>

		</div>
	</div>
	<div style="text-align: right">
		<button class="btn btn-outline-warning" type="submit" style="color: white">SUBMIT</button>
	</div>
</form>