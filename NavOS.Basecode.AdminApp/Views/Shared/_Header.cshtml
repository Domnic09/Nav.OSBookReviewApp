@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor
<nav class="navbar navbar-expand-lg navbar-dark @((ViewBag.LoginView == true) ? "hide-navbar" : "")" style="background-color:#111111">
    <div class="container-fluid">
        <a asp-action="Index" asp-controller="Book">
        <img src="~/img/bookhub-logo.png" style="width: 100px; height: auto; margin-right:200px;" />
        </a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav">
                <li class="nav-item me-5">
                    <a class="nav-link" asp-action="TopBooks" asp-controller="Book">Top Books</a>
                </li>
                <li class="nav-item me-5">
                    <a class="nav-link" asp-action="AddBook" asp-controller="Book">Add Book</a>
                </li>
                <li class="nav-item me-5">
                    <a class="nav-link" asp-action="ViewGenre" asp-controller="Genre">Genre</a>
                </li>
            </ul>
            <div class="logosec ms-auto">
                @HttpContextAccessor.HttpContext.Session.GetString("AdminName")
                <div class="mr-20 hover-pointer" style="position: relative">
                    <div class="dp">
                        <img src="~/img/admin_profile.svg"
                             class="dpicn hover-pointer"
                             alt="dp">
                    </div>
                    <div class="dropdown">
                        <ul>
                            <li class="@((HttpContextAccessor.HttpContext.Session.GetString("Role") != "Master Admin") ? "d-none" : "")">
                                <a asp-action="List" asp-controller="Admin" title="Admin List">
                                    <i class="fas fa-users me-3"></i>Admin List
                                </a>
                            </li>
                            <li>

                                <a asp-action="SignOutUser" asp-controller="Account">
                                    <i class="fas fa-right-from-bracket me-3"></i>Logout
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</nav>
