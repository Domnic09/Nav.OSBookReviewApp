@* fetch all books *@
@if (Model.Any())
{
    <div class="table-responsive">
        <table class="table table-dark table-borderless text-center" style="margin-top: 20px;">
            <thead class="rounded">
                <tr>
                    <th style="background-color: #FFC119;color: black;">Book Title: </th>
                    <th style="background-color: #FFC119;color: black;">Author: </th>
                    <th style="background-color: #FFC119;color: black;">Chapter: </th>
                    <th style="background-color: #FFC119;color: black;">Genre: </th>
                    <th style="background-color: #FFC119;color: black;">Source: </th>
                    <th style="background-color: #FFC119;color: black;">User Email: </th>
                    <th style="background-color: #FFC119;color: black;">Time Added: </th>



                </tr>
            </thead>
            <tbody>
                @foreach (var book in Model)
                {
                    <tr>

                        <td class="align-middle">@book.BookReqTitle</td>
                        <td class="align-middle">@book.BookReqAuthor</td>
                        <td class="align-middle">@book.BookReqChapter</td>
                        <td class="align-middle">@book.BookReqGenre</td>
                        <td class="align-middle">@book.BookReqSource</td>
                        <td class="align-middle">@book.BookReqUserEmail</td>
                        <td class="align-middle">@book.BookReqTime</td>

                    </tr>
                }
            </tbody>
        </table>
    </div>
}
