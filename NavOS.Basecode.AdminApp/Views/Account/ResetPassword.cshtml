@using NavOS.Basecode.Services.ServiceModels
@model AdminViewModel

@{
    ViewData["Title"] = "Reset Password";
    ViewBag.LoginView = true;
    ViewBag.MainStyle = true;
}

@section styles {
    <link rel="stylesheet" type="text/css" href="~/css/login-verify.css">
}

<div class="centerBox">
    <div class="box">
        <header>
            <h1>Reset Password</h1>
            <h5>Enter your new password</h5>
        </header>
        <div>
            <form asp-action="ResetPassword" method="post">
                <input type="hidden" asp-for="AdminId" value="@ViewBag.AdminId" />
                <input type="hidden" asp-for="Token" value="@ViewBag.Token" />
                <div class="w3-container">
                    <div class="txt_field" style="margin: 35px;">
                        <i class="fa fa-unlock-alt"></i>
                        <input type="password" asp-for="Password" placeholder="New Password">
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="txt_field" style="margin: 35px;">
                        <i class="fa fa-unlock-alt"></i>
                        <input type="password" asp-for="ConfirmPassword" placeholder="Confirm Password">
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>
                    <div class="w3-center" style="margin-bottom: 35px;">
                        <input type="submit" name="submit" value="Submit">
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section scripts {
    <script>
        var errorMessage = '@TempData["ErrorMessage"]';
        var successMessage = '@TempData["SuccessMessage"]';

        if (errorMessage) {
            toastr.error(errorMessage);
        }

        if (successMessage) {
            toastr.success(successMessage);
        }
    </script>
}