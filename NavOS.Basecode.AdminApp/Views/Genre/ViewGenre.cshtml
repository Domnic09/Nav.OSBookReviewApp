@model List<NavOS.Basecode.Services.ServiceModels.GenreViewModel>


@{
    ViewData["Title"] = "Genre List";

}

<div style="margin-top: 40px; text-align: right">
    <h3><a asp-controller="Genre" asp-action="AddGenre" style="text-decoration: none; font-weight: bold;color: #FFC119">+ ADD GENRE</a></h3>
</div>

<div class="container pt-5">
    <div class="row">
        @foreach (var genre in Model)
        {
            <div class="col-md-4">
                <div class="card mb-4 shadow-sm">
                    <div class="card-body">
                        <h4 class="card-text font-weight-bold">@genre.GenreName</h4>
                        <p class="card-text"><b>@genre.GenreDescription</b></p>
                        <div class="d-flex justify-content-between align-items-center">
                        <div class="btn-group">
                            <form asp-controller="Genre" asp-action="EditGenre" method="get">
                                    <input type="hidden" name="Genreid" value="@genre.GenreId" />
                                <button type="submit" class="btn btn-sm btn-outline-secondary">Edit</button>
                            </form>
                            <form asp-controller="Genre" asp-action="Delete" method="post">
                                <input type="hidden" name="Genreid" value="@genre.GenreId" />
                                <button type="submit" class="btn btn-sm btn-outline-danger">Delete</button>
                            </form>
                        </div>
                        <div>
                            <small class="text-muted">Updated by: @genre.UpdatedBy</small>
                            <br>
                            <small class="text-muted">Added by: @genre.AddedBy</small>
                        </div>
                        
                            @*  <small class="text-muted">@book.CreatedDate.ToString("dd/MM/yyyy")</small> *@
                        
                        
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
