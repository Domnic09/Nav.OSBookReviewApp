@using NavOS.Basecode.Services.ServiceModels;
@model List<NavOS.Basecode.Services.ServiceModels.BookViewModel>
@{
    ViewData["Title"] = "New Books";

    int pageSize = 10;
    int currentPage = ViewContext.HttpContext.Request.Query["page"].FirstOrDefault() != null ? int.Parse(ViewContext.HttpContext.Request.Query["page"]) : 1;

    int totalItems = Model.Count;
    int totalPages = (int)Math.Ceiling((double)totalItems / pageSize);

    int startIndex = (currentPage - 1) * pageSize;
    int endIndex = Math.Min(startIndex + pageSize, totalItems);

    List<BookViewModel> pageData = Model.GetRange(startIndex, endIndex - startIndex);
}

<style>
    .ellipsis {
        overflow: hidden;
        text-overflow: ellipsis;
        display: -webkit-box;
        -webkit-line-clamp: 3;
        -webkit-box-orient: vertical;
    }

    .pagination .page-item.active a {
        background-color: #00A651;
        box-shadow: none;
    }

    .pagination .page-item:not(.active) a {
        background-color: transparent;
        color: #000;
    }

    .pagination .page-item a {
        border: none;
    }

        .pagination .page-item a:hover {
            background-color: #00A651;
            color: white;
        }

</style>

<div class="container mt-5">
    <div class="row mx-5" style="border: 1px solid #fff;">
        <!-- Header Container -->
        <div class="col-md-12" style="background-color:#FFC119">
            <div class="d-flex justify-content-between align-items-center">
                <span class="float-start text-center">Date</span>
                <!-- Pagination -->
                <nav aria-label="Page navigation" style="margin-bottom:-14.5px;">
                    <ul class="pagination">
                        @if (currentPage > 1)
                        {
                            <li class="page-item">
                                <a class="page-link" href="?page=@(currentPage - 1)" aria-label="Previous">
                                    <span aria-hidden="true">&laquo;</span>
                                </a>
                            </li>
                        }

                        @for (int i = currentPage - 2; i <= currentPage + 2; i++)
                        {
                            if (i >= 1 && i <= totalPages)
                            {
                                <li class="page-item @(i == currentPage ? "active" : "")">
                                    <a class="page-link" href="?page=@i">@i</a>
                                </li>
                            }
                        }

                        @if (currentPage < totalPages)
                        {
                            <li class="page-item">
                                <a class="page-link" href="?page=@(currentPage + 1)" aria-label="Next">
                                    <span aria-hidden="true">&raquo;</span>
                                </a>
                            </li>
                        }
                    </ul>
                </nav>
            </div>
        </div>
        <!-- Search -->
        <div class="row mt-3 d-flex justify-content-center mx-1">
            <div class="col-md-12">
                <div class="input-group">
                    <input type="search" id="form1" class="form-control" placeholder="Search" aria-label="Search" style="box-shadow:none;" />
                    <button class="btn btn-primary" type="button" style="box-shadow:none;">
                        <i class="fas fa-search"></i>
                    </button>
                </div>
            </div>
        </div>
        <!-- Filter button -->
        <div class="row">
            <div class="col-md-12 mt-3 ms-3 mb-4">
                <button type="button" class="btn btn-outline-warning mt-2" style="box-shadow:none;">All</button>
                <button type="button" class="btn btn-outline-warning mt-2" style="box-shadow:none;">Title</button>
                <button type="button" class="btn btn-outline-warning mt-2" style="box-shadow:none;">Author</button>
                <button type="button" class="btn btn-outline-warning mt-2" style="box-shadow:none;">Genre</button>
            </div>
        </div>
        <!-- Book List -->
        <div class="col-md-12 mx-2">
            <ul class="row mt-3 list-unstyled mx-auto" style="padding-left: 0;">
                @foreach (var book in pageData)
                {
                    <li class="col-10 col-md-3 col-xl-2 mb-3 mx-3">
                        <div class="card w-100">
                            <a asp-action="ViewSingleBook" asp-controller="Book" asp-route-BookId="@book.BookId" class="text-decoration-none text-dark">
                                <img class="card-img-top" height="250" width="100" src="~/img/default-book.jpg" alt="Card image cap">
                                <div class="card-body text-center">
                                    <h5 class="card-title">@book.BookTitle</h5>
                                    <p class="card-text ellipsis">@book.AddedTime.ToString("MM/dd/yyyy")</p>
                                </div>
                            </a>
                        </div>
                    </li>
                }
            </ul>
        </div>
    </div>
</div>
